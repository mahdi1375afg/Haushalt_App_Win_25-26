<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ux_color_primary"
    android:padding="24dp"
    tools:context=".RegisterActivity2">

    <!-- Optional: Logo oben (falls kein Logo vorhanden, Zeile behalten â€“ kein Fehler) -->
    <ImageView
        android:id="@+id/ux_logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:contentDescription="App Logo"
        app:tint="@color/ux_color_on_primary"
        tools:src="@mipmap/ic_launcher" />

    <!-- Titel -->
    <TextView
        android:id="@+id/ux_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ux_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Anmelden"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/ux_color_on_surface" />

    <!-- Eingabefeld: Email (ID bleibt: email) -->
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ux_title"
        android:layout_marginTop="28dp"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:importantForAutofill="yes"
        android:autofillHints="emailAddress"
        android:backgroundTint="@color/ux_color_outline"
        android:textColor="@color/ux_color_on_surface"
        android:textColorHint="@color/ux_color_outline"
        android:padding="14dp"
        android:elevation="1dp"
        android:text="admin@gmail.com" />

    <!-- Eingabefeld: Passwort (ID bleibt: password) -->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="20dp"
        android:hint="Passwort"
        android:inputType="textPassword"
        android:backgroundTint="@color/ux_color_outline"
        android:textColor="@color/ux_color_on_surface"
        android:textColorHint="@color/ux_color_outline"
        android:padding="14dp"
        android:elevation="1dp"
        android:text="123456" />

    <!-- Login-Button (ID bleibt: login) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/password"
        android:layout_marginTop="28dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/ux_color_on_primary"
        app:backgroundTint="@color/ux_color_accent"
        app:cornerRadius="12dp"
        app:rippleColor="@color/ux_color_on_primary" />

</RelativeLayout>
