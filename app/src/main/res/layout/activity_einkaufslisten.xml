<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ux_color_primary"
    android:padding="8dp">

    <!-- Hauptbereich mit Liste -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Einkaufslisten-Liste -->
        <ListView
            android:id="@+id/einkaufslisten_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/ux_color_outline"
            android:dividerHeight="1dp"
            android:background="@color/ux_color_surface"
            android:layout_marginBottom="70dp"
            android:padding="8dp"
            tools:listitem="@android:layout/simple_list_item_1" />
    </LinearLayout>

    <!-- Floating Action Button (Liste hinzufügen) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_liste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:contentDescription="Neue Einkaufsliste hinzufügen"
        app:backgroundTint="@color/ux_color_accent"
        app:tint="@color/ux_color_on_primary"
        app:srcCompat="@drawable/baseline_add_24"
        app:elevation="8dp"
        app:borderWidth="0dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
