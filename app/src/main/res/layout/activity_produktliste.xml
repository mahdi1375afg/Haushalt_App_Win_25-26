<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ux_color_primary"
    android:fitsSystemWindows="true"
    tools:context=".einkaufsliste.EinkaufslisteActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Einkaufsliste"
        android:textColor="@color/ux_color_on_surface"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/textViewKategorieLabel"
        android:layout_width="0dp"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:text="Kategorie:"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintStart_toStartOf="@+id/spinnerKategorie"
        app:layout_constraintEnd_toEndOf="@+id/spinnerKategorie"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textViewSortLabel"
        android:layout_width="0dp"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:text="Sortierung:"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintStart_toStartOf="@+id/spinnerSort"
        app:layout_constraintEnd_toEndOf="@+id/spinnerSort"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp" />

    <Spinner
        android:id="@+id/spinnerKategorie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewKategorieLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinnerSort"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp" />

    <Spinner
        android:id="@+id/spinnerSort"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewSortLabel"
        app:layout_constraintStart_toEndOf="@+id/spinnerKategorie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/einkaufslisteRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:queryHint="Produkte durchsuchen..."
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerKategorie" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/pAddScreen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:contentDescription="Produkt hinzufügen"
        app:backgroundTint="@color/ux_color_accent"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:fabCustomSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_menu"
        app:tint="@color/ux_color_on_primary"
        app:shapeAppearanceOverlay="@style/FabShape" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ux_color_surface"
        app:itemIconTint="@color/selector_bottom_nav"
        app:itemTextColor="@color/selector_bottom_nav"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <LinearLayout
        android:id="@+id/selection_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@color/ux_color_surface"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="22dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Abbrechen"
            android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:textAllCaps="false"
            android:singleLine="true"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/button_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hinzufügen"
            android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:textAllCaps="false"
            android:singleLine="true"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/button_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Löschen"
            android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:textAllCaps="false"
            android:singleLine="true"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>