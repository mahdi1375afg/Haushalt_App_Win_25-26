<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ux_color_primary"
    android:padding="16dp"
    tools:context=".profile.profile_Activity">

    <!-- Titel "Konto" -->
    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Konto"
        android:textColor="@color/ux_color_on_surface"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp" />

    <!-- Konto-Liste -->
    <ListView
        android:id="@+id/kontoListe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/ux_color_on_surface"
        android:textColorHint="@color/ux_color_outline"
        app:layout_constraintTop_toBottomOf="@id/textView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/konot_delete"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Konto löschen -->
    <Button
        android:id="@+id/konot_delete"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Konto löschen"
        android:textAllCaps="false"
        android:textColor="@color/ux_color_on_primary"
        android:backgroundTint="@color/ux_color_critical"
        app:layout_constraintTop_toBottomOf="@id/kontoListe"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/konto_bearbeiten"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <!-- Konto bearbeiten -->
    <Button
        android:id="@+id/konto_bearbeiten"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Bearbeiten"
        android:textAllCaps="false"
        android:textColor="@color/ux_color_on_primary"
        android:backgroundTint="@color/ux_color_accent"
        app:layout_constraintTop_toTopOf="@id/konot_delete"
        app:layout_constraintBottom_toBottomOf="@id/konot_delete"
        app:layout_constraintStart_toEndOf="@id/konot_delete"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ux_color_surface"
        app:itemIconTint="@color/selector_bottom_nav"
        app:itemTextColor="@color/selector_bottom_nav"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
