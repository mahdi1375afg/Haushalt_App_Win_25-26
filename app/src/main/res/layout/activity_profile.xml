<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ux_color_primary"
    android:padding="16dp"
    tools:context=".profile.ProfileActivity">

    <!-- Titel "Konto" -->
    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Konto"
        android:textColor="@color/ux_color_on_surface"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/kontoListe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Konto-Liste -->

    <ListView
        android:id="@+id/kontoListe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/konto_bearbeiten"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView12" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ux_color_accent"
        android:minHeight="60dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@color/ux_color_on_primary"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:cornerRadius="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/konot_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/konot_delete" />

    <!-- Konto löschen -->
    <Button
        android:id="@+id/konot_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/ux_color_critical"
        android:minHeight="60dp"
        android:text="Konto löschen"
        android:textAllCaps="false"
        android:textColor="@color/ux_color_on_primary"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toStartOf="@+id/logout_button"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Konto bearbeiten -->
    <Button
        android:id="@+id/konto_bearbeiten"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="240dp"
        android:backgroundTint="@color/ux_color_accent"
        android:minHeight="60dp"
        android:text="Kontodaten bearbeiten"
        android:textAllCaps="false"
        android:textColor="@color/ux_color_on_primary"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/konot_delete"
        app:layout_constraintEnd_toStartOf="@+id/backgroundSettingsButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/backgroundSettingsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/ux_color_accent"
        android:minHeight="60dp"
        android:text="Benachrichtigungen verwalten"
        android:textAllCaps="false"
        android:textColor="@color/ux_color_on_primary"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/konto_bearbeiten"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/konto_bearbeiten" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ux_color_surface"
        app:itemIconTint="@color/selector_bottom_nav"
        app:itemTextColor="@color/selector_bottom_nav"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
