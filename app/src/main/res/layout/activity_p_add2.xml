<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ux_color_primary"
    android:padding="16dp"
    tools:context=".product_activity.p_addActivity2">

    <!-- Titel -->
    <TextView
        android:id="@+id/ux_title_add_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produkt hinzuf체gen"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/ux_color_on_surface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Name -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/ux_color_on_surface"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/ux_title_add_product"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/pName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Produktname"
        android:inputType="textCapWords"
        android:backgroundTint="@color/ux_color_outline"
        android:textColor="@color/ux_color_on_surface"
        android:textColorHint="@color/ux_color_outline"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView2"/>

    <!-- Einheit -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Einheit"
        android:textColor="@color/ux_color_on_surface"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/pName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/pEinheit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="z. B. St체ck, kg, L"
        android:inputType="text"
        android:backgroundTint="@color/ux_color_outline"
        android:textColor="@color/ux_color_on_surface"
        android:textColorHint="@color/ux_color_outline"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView3"/>

    <!-- Menge -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menge"
        android:textColor="@color/ux_color_on_surface"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/pEinheit"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/pMenge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Anzahl"
        android:inputType="number"
        android:backgroundTint="@color/ux_color_outline"
        android:textColor="@color/ux_color_on_surface"
        android:textColorHint="@color/ux_color_outline"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView5"/>

    <!-- Kategorie -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategorie"
        android:textColor="@color/ux_color_on_surface"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/pMenge"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/pKategorie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Kategorie w채hlen"
        android:inputType="none"
        android:backgroundTint="@color/ux_color_outline"
        android:textColor="@color/ux_color_on_surface"
        android:textColorHint="@color/ux_color_outline"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView4"/>

    <!-- Mindestbestand -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mindestbestand"
        android:textColor="@color/ux_color_on_surface"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/pKategorie"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/pMindBestand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="z. B. 5"
        android:inputType="number"
        android:backgroundTint="@color/ux_color_outline"
        android:textColor="@color/ux_color_on_surface"
        android:textColorHint="@color/ux_color_outline"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView7"/>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/pMindBestand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Abbrechen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Abbrechen"
            android:textAllCaps="false"
            android:textColor="@color/ux_color_on_primary"
            app:backgroundTint="@color/ux_color_outline"
            app:cornerRadius="12dp"
            app:rippleColor="@color/ux_color_on_primary"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hinzuf체gen"
            android:textAllCaps="false"
            android:textColor="@color/ux_color_on_primary"
            app:backgroundTint="@color/ux_color_accent"
            app:cornerRadius="12dp"
            app:rippleColor="@color/ux_color_on_primary"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
