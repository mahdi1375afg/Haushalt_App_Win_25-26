<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".delete_haushalt_Activity">

    <Button
        android:id="@+id/ja_button"
        android:layout_width="152dp"
        android:layout_height="83dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="56dp"
        android:text="lÃ¶schen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nein_button"
        android:layout_width="152dp"
        android:layout_height="83dp"
        android:layout_marginBottom="56dp"
        android:text="aktualisieren"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toEndOf="@+id/ja_button" />

    <TextView
        android:id="@+id/delteView"
        android:layout_width="281dp"
        android:layout_height="105dp"
        android:text="Bitte geben Sie neue Haushaltsnamen ein:"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.282" />

    <EditText
        android:id="@+id/neu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:layout_marginBottom="192dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Neuer Haushaltsname"
        app:layout_constraintBottom_toTopOf="@+id/nein_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delteView"
        app:layout_constraintVertical_bias="0.562" />

    <ImageView
        android:id="@+id/back_haus"
        android:layout_width="53dp"
        android:layout_height="79dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/outline_arrow_back_24" />

</androidx.constraintlayout.widget.ConstraintLayout>