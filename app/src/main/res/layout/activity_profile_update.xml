<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/ux_color_primary">

    <!-- Titel -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konto bearbeiten"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/ux_color_on_surface"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Name -->
    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:padding="14dp"
        android:backgroundTint="@color/ux_color_outline"
        android:textColor="@color/ux_color_on_surface"
        android:textColorHint="@color/ux_color_outline"
        android:layout_marginBottom="16dp" />

    <!-- Email -->
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-Mail"
        android:padding="14dp"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/ux_color_outline"
        android:textColor="@color/ux_color_on_surface"
        android:textColorHint="@color/ux_color_outline"
        android:layout_marginBottom="16dp" />

    <!-- Passwort -->
    <EditText
        android:id="@+id/passwortEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Neues Passwort (optional)"
        android:padding="14dp"
        android:inputType="textPassword"
        android:backgroundTint="@color/ux_color_outline"
        android:textColor="@color/ux_color_on_surface"
        android:textColorHint="@color/ux_color_outline"
        android:layout_marginBottom="24dp" />

    <!-- Speichern -->
    <Button
        android:id="@+id/speichernButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Speichern"
        android:textAllCaps="false"
        android:textColor="@color/ux_color_on_primary"
        android:backgroundTint="@color/ux_color_accent"
        android:layout_marginBottom="12dp" />

    <!-- Abbrechen -->
    <Button
        android:id="@+id/abbrechenButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Abbrechen"
        android:textAllCaps="false"
        android:textColor="@color/ux_color_on_primary"
        android:backgroundTint="@color/ux_color_critical" />

</LinearLayout>
