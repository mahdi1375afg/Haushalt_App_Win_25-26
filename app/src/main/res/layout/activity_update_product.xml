<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ux_color_primary"
    android:padding="16dp"
    tools:context=".produkt.UpdateProductActivity">

    <!-- Guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <!-- Titel -->
    <TextView
        android:id="@+id/update_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produkt bearbeiten"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/ux_color_on_surface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Name -->
    <TextView
        android:id="@+id/label_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/ux_color_on_surface"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/update_product_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Produktname"
        android:inputType="textCapWords"
        android:backgroundTint="@color/ux_color_outline"
        android:textColor="@color/ux_color_on_surface"
        android:textColorHint="@color/ux_color_outline"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/label_product_name" />

    <!-- Kategorie (Dropdown) -->
    <TextView
        android:id="@+id/label_product_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kategorie"
        android:textColor="@color/ux_color_on_surface"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/product_category_spinner"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/ux_color_outline"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_product_category"
        app:layout_constraintBottom_toBottomOf="@id/label_product_category"/>

    <!-- Einheit (Dropdown) -->
    <TextView
        android:id="@+id/label_product_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Einheit"
        android:textColor="@color/ux_color_on_surface"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/product_category_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/product_unit_spinner"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/ux_color_outline"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_product_unit"
        app:layout_constraintBottom_toBottomOf="@id/label_product_unit"/>

    <!-- Mindestbestand -->
    <TextView
        android:id="@+id/label_product_min_stock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mindestbestand"
        android:textColor="@color/ux_color_on_surface"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/product_unit_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/product_min_stock_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="z. B. 5"
        android:inputType="number"
        android:backgroundTint="@color/ux_color_outline"
        android:textColor="@color/ux_color_on_surface"
        android:textColorHint="@color/ux_color_outline"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/label_product_min_stock"/>

    <!-- Zielbestand -->
    <TextView
        android:id="@+id/label_product_target_stock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Zielbestand"
        android:textColor="@color/ux_color_on_surface"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/product_min_stock_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/product_target_stock_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="z. B. 10"
        android:inputType="number"
        android:backgroundTint="@color/ux_color_outline"
        android:textColor="@color/ux_color_on_surface"
        android:textColorHint="@color/ux_color_outline"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/label_product_target_stock"/>

    <!-- Schrittweite -->
    <TextView
        android:id="@+id/label_product_step_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Schrittweite"
        android:textColor="@color/ux_color_on_surface"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/product_target_stock_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/product_step_size_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="z. B. 1"
        android:inputType="number"
        android:backgroundTint="@color/ux_color_outline"
        android:textColor="@color/ux_color_on_surface"
        android:textColorHint="@color/ux_color_outline"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/label_product_step_size"/>

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/product_step_size_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LÃ¶schen"
            android:textAllCaps="false"
            android:textColor="@color/ux_color_on_primary"
            app:backgroundTint="@color/ux_color_critical"
            app:cornerRadius="12dp"
            app:rippleColor="@color/ux_color_on_primary"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Aktualisieren"
            android:textAllCaps="false"
            android:textColor="@color/ux_color_on_primary"
            app:backgroundTint="@color/ux_color_accent"
            app:cornerRadius="12dp"
            app:rippleColor="@color/ux_color_on_primary"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>